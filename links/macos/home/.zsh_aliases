# A safer 'rm -rf'
tm() {
  if [ "$1" = "-rf" ]; then
    case "$2" in
      "/"|"/home"|"~"|"~/"|"/home/alan"|"/home/alanj/")
        echo "Safety lock: You tried to delete a critical directory. Aborting."
        return 1
        ;;
      *)
        command rm $@
        ;;
    esac
  else
    command rm $@
  fi
}

